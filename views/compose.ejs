<%- include("partials/header"); -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <br>
    <input class="form-control" type="text" name="postTitle" value="">
    <label for="post">Post</label>
    <br>
    <textarea id="post" class="form-control" name="postBody" rows="5" cols="160"></textarea>
  </div>

  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>
<%- include("partials/footer"); -%>
